{
  "name": "bethlehem",
  "version": "0.1.0",
  "license": "MIT",
  "author": "KsRyY",
  "main": "dist/index.js",
  "module": "dist/b.esm.js",
  "typings": "dist/index.d.ts",
  "unpkg": "dist/b.umd.production.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "ava --watch",
    "build": "tsdx build --format cjs,esm,umd --name B",
    "build:docs": "typedoc src",
    "test": "ava --verbose",
    "lint": "xo",
    "prepublishOnly": "tsdx build"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@ava/babel": "1.0.0",
    "@babel/preset-typescript": "7.8.3",
    "@babel/register": "7.8.3",
    "ava": "3.0.0",
    "chokidar": "^3.3.1",
    "eslint-config-prettier": "6.9.0",
    "eslint-config-rem": "4.0.0",
    "eslint-config-xo-typescript": "0.24.1",
    "eslint-plugin-prettier": "3.1.2",
    "esm": "3.2.25",
    "husky": "4.0.10",
    "lint-staged": "10.0.0-beta.15",
    "prettier": "1.19.1",
    "ts-node": "8.6.2",
    "tsdx": "0.12.3",
    "tslib": "1.10.0",
    "typedoc": "0.16.7",
    "typescript": "3.8.0-dev.20200119",
    "xo": "0.25.3"
  },
  "resolutions": {
    "**/typescript": "3.8.0-dev.20200119"
  },
  "xo": {
    "ignores": [
      "docs"
    ],
    "extends": [
      "xo-typescript",
      "rem",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ]
    },
    "overrides": [
      {
        "files": "scripts/**/*.js",
        "extends": [
          "rem",
          "plugin:prettier/recommended"
        ]
      }
    ]
  },
  "lint-staged": {
    "{*.{js,ts},!docs/**/*.js}": [
      "xo --fix"
    ],
    "{*.{json,md},!docs/**/*.{json,md}}": [
      "prettier --write"
    ]
  },
  "dependencies": {},
  "ava": {
    "require": [
      "esm",
      "ts-node/register"
    ],
    "babel": true,
    "extensions": [
      "ts"
    ]
  },
  "sideEffects": false
}
