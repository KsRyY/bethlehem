{
  "name": "bethlehem",
  "version": "1.9.0",
  "description": "A minimal, practical functional programming library for JavaScript",
  "license": "MIT",
  "author": "KsRyY",
  "main": "dist/index.js",
  "module": "dist/b.esm.js",
  "typings": "dist/index.d.ts",
  "unpkg": "dist/b.umd.production.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "ava --watch",
    "build": "foy build",
    "build:docs": "foy build:docs",
    "test": "ava --verbose",
    "test:coverage": "foy test:coverage",
    "lint": "xo",
    "prepublishOnly": "foy build",
    "benchmark": "foy benchmark"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@ava/babel": "1.0.1",
    "@typescript-eslint/eslint-plugin": "2.19.2",
    "@typescript-eslint/parser": "2.19.2",
    "ava": "3.3.0",
    "c8": "7.1.0",
    "chuhai": "1.2.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-config-rem": "4.0.0",
    "eslint-config-xo-typescript": "0.26.0",
    "eslint-plugin-prettier": "3.1.2",
    "esm": "3.2.25",
    "espower-loader": "1.2.2",
    "foy": "0.1.29",
    "husky": "4.2.3",
    "lint-staged": "10.0.7",
    "power-assert": "1.6.1",
    "prettier": "1.19.1",
    "rambda": "^4.4.0",
    "ramda": "^0.26.1",
    "ts-node": "8.6.2",
    "tsdx": "0.12.3",
    "tslib": "1.10.0",
    "typedoc": "0.16.8",
    "typescript": "3.8.0-dev.20200211",
    "xo": "0.26.0"
  },
  "resolutions": {
    "**/typescript": "3.8.0-dev.20200211"
  },
  "xo": {
    "ignores": [
      "docs"
    ],
    "extends": [
      "xo-typescript",
      "rem",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ]
    },
    "overrides": [
      {
        "files": "benchmark/**/*.js",
        "extends": [
          "rem",
          "plugin:prettier/recommended"
        ],
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "cases": {
                "kebabCase": true
              }
            }
          ]
        }
      },
      {
        "files": "Foyfile.js",
        "extends": [
          "rem",
          "plugin:prettier/recommended"
        ],
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "cases": {
                "pascalCase": true
              }
            }
          ]
        }
      }
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "xo --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "ava": {
    "require": [
      "esm",
      "ts-node/register/transpile-only"
    ],
    "babel": true,
    "extensions": [
      "ts"
    ],
    "files": [
      "!dist/**/*"
    ]
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.com"
  }
}
