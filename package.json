{
  "name": "bethlehem",
  "version": "1.3.0",
  "description": "A minimal, practical functional programming library for JavaScript",
  "license": "MIT",
  "author": "KsRyY",
  "main": "dist/index.js",
  "module": "dist/b.esm.js",
  "typings": "dist/index.d.ts",
  "unpkg": "dist/b.umd.production.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "ava --watch",
    "build": "tsdx build --format cjs,esm,umd --name B",
    "build:docs": "typedoc src",
    "test": "ava --verbose",
    "test:coverage": "c8 ava --timeout 2m && c8 report -r lcov",
    "lint": "xo",
    "prepublishOnly": "tsdx build --format cjs,esm,umd --name B",
    "benchmark": "tsdx build --format cjs,esm,umd --name B && node benchmark/index.js -r benchmark/enable-power-assert.js > benchmark.md"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@ava/babel": "1.0.0",
    "ava": "3.1.0",
    "c8": "7.0.1",
    "chuhai": "1.2.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-config-rem": "4.0.0",
    "eslint-config-xo-typescript": "0.24.1",
    "eslint-plugin-prettier": "3.1.2",
    "esm": "3.2.25",
    "espower-loader": "1.2.2",
    "husky": "4.2.1",
    "lint-staged": "10.0.2",
    "power-assert": "1.6.1",
    "prettier": "1.19.1",
    "rambda": "^4.4.0",
    "ramda": "^0.26.1",
    "ts-node": "8.6.2",
    "tsdx": "0.12.3",
    "tslib": "1.10.0",
    "typedoc": "0.16.8",
    "typescript": "3.8.0-dev.20200124",
    "xo": "0.25.3"
  },
  "resolutions": {
    "**/typescript": "3.8.0-dev.20200124"
  },
  "xo": {
    "ignores": [
      "docs"
    ],
    "extends": [
      "xo-typescript",
      "rem",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "unicorn/filename-case": [
        "error",
        {
          "cases": {
            "camelCase": true,
            "pascalCase": true
          }
        }
      ]
    },
    "overrides": [
      {
        "files": "benchmark/**/*.js",
        "extends": [
          "rem",
          "plugin:prettier/recommended"
        ],
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "cases": {
                "kebabCase": true
              }
            }
          ]
        }
      }
    ]
  },
  "lint-staged": {
    "{*.{js,ts},!docs/**/*.js}": [
      "xo --fix"
    ],
    "{*.{json,md},!docs/**/*.{json,md}}": [
      "prettier --write"
    ]
  },
  "dependencies": {},
  "ava": {
    "require": [
      "esm",
      "ts-node/register"
    ],
    "babel": true,
    "extensions": [
      "ts"
    ],
    "files": [
      "!dist/**/*"
    ]
  },
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.com"
  }
}
